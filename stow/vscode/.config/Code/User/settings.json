// VSCode uses too many different paths to load setting depending on how it is
// installed (Flatpak, RPM, etc). You'll have to manually copy the file contents
// over, remembering to copy them back when you make changes.
{
    "diffEditor.codeLens": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.codeActionsOnSave": {},
    "editor.codeLens": false,
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line-thin",
    "editor.find.autoFindInSelection": "multiline",
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'FiraCode Nerd Font', 'Fira Code', 'UbuntuMono Nerd Font', 'Ubuntu Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.guides.bracketPairs": "active",
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [
        80,
        120,
    ],
    "explorer.confirmDelete": false,
    "extensions.ignoreRecommendations": true,
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": "all",
    "git.autoStash": true,
    "git.openRepositoryInParentFolders": "never",
    "github.copilot.advanced": {},
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": false,
        "scminput": false
    },
    "gitlens.codeLens.scopes": [
        "document"
    ],
    "gitlens.currentLine.scrollable": false,
    "redhat.telemetry.enabled": false,
    "rust-analyzer.inlayHints.bindingModeHints.enable": true,
    "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "skip_trivial",
    "rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": true,
    "rust-analyzer.inlayHints.parameterHints": true,
    "rust-analyzer.lens.enable": false,
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.defaultProfile.linux": "flatpak-bash",
    "terminal.integrated.profiles.linux": {
        "flatpak-bash": {
            "args": [
                "bash"
            ],
            "path": "host-spawn"
        }
    },
    // Okay, maybe I need a _little_ bit of help viewing things on a 4K monitor.
    "window.zoomLevel": 1.15,
    "workbench.colorTheme": "Atom One Dark",
    "workbench.editor.autoLockGroups": {
        "mainThreadWebview-markdown.preview": true
    },
    "workbench.fontAliasing": "auto",
    "workbench.iconTheme": "material-icon-theme"
}