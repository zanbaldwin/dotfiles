[alias]
	st              = status
	co              = checkout
	line            = log --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	s               = status -s
	d               = diff
	prepush         = rebase -i @{u}
	fa              = fetch --all
	ft              = fetch --tags
	push            = push --force-with-lease
	# Install with "go get github.com/google/git-appraise/git-appraise" (Golang tools required).
	appraise        = !git-appraise
	snapshot        = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
	snapshots       = !git stash list --grep snapshot
	recent-branches = !git for-each-ref --count=15 --sort=-committerdate refs/heads/ --format='%(refname:short)'
	amend           = commit --amend
	recommit        = commit --amend --no-edit
	continue        = rebase --continue
	skip            = rebase --skip
	abort           = rebase --abort
	uncommit        = reset --soft HEAD^
	assume          = update-index --assume-unchanged
	unassume        = update-index --no-assume-unchanged
	assumed         = "!git ls-files -v | grep ^h | cut -c 3-"
	# Requires PHPCS, install with "composer global require squizlabs/php_codesniffer"
	# (or recommended "cgr squizlabs/php_codesniffer", see ".bash_aliases" for details).
	sniff           = "!git diff --name-only | grep \\\\.php\\$ | xargs --no-run-if-empty phpcs -p -v --standard=PSR2"
	versions        = "!v() { git tag | grep \"^[vV]\\?[0-9.]\\+$\" | sort -V; }; v"
	# If the current working tree is cleanm, then pull the latest "develop" and rebase it into the current branch.
	getdev          = "!([ $(git diff-files | wc -l) -eq 0 ] || (echo 'Working directory not clean. Aborting.'; return 1)) && git checkout develop && git pull origin develop && git checkout - && git rebase develop"
[user]
	name            = Zander Baldwin
	email           = hello@zanderbaldwin.com
	signingkey      = 419CB27C
[push]
	default         = current
[pull]
	rebase          = true
[pager]
	# "diff-highlight" isn't installed by default, you can find it in the contrib section of the Git repo:
	# https://github.com/git/git/blob/master/contrib/diff-highlight/diff-highlight
	# (requires Perl to be installed).
	log             = diff-highlight | less --tabs=4 -RFX
	show            = diff-highlight | less --tabs=4 -RFX
	diff            = diff-highlight | less --tabs=4 -RFX
[interactive]
	diffFilter      = diff-highlight
[diff]
	compactionHeuristic = true
	algorithm           = patience
	mnemonicprefix      = true
[rerere]
	# Remember my merges
	# http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
	enabled         = true
[help]
	autocorrect     = 1
[core]
	excludesFile    = ~/.ignore
# Force Git to always download over SSH to prevent asking for username and password
# (which is impossible to do on the command-line if 2FA has been enabled).
[url "git@github.com:"]
	insteadOf       = https://github.com/
