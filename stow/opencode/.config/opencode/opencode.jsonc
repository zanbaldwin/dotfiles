{
    "$schema": "https://opencode.ai/config.json",
    "theme": "dracula",
    "model": "anthropic/claude-sonnet-4-5",
    "small_model": "anthropic/claude-haiku-4-5",
    "autoupdate": true,
    "share": "disabled",
    "tui": {
        "scroll_speed": 3,
    },
    "formatter": {
        "rustfmt": {
            "command": ["cargo", "fmt", "--", "$FILE"],
            "extensions": [".rs"],
        },
        "php-cs-fixer": {
            "command": ["make", "fix"],
            "extensions": [".php"],
        },
    },
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "{file:secrets/context7.txt}"
            },
            "enabled": true
        }
    }
}
