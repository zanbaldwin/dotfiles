// VSCode uses too many different paths to load setting depending on how it is
// installed (Flatpak, RPM, etc). You'll have to manually copy the file contents
// over, remembering to copy them back when you make changes.
{
    // Get rid of the annoying things
    "diffEditor.codeLens": false,
    "editor.codeLens": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.codeActionsOnSave": {},
    "explorer.confirmDelete": false,
    "extensions.ignoreRecommendations": true,
    "editor.find.autoFindInSelection": "multiline",
    "editor.inlineSuggest.enabled": true,
    "editor.copyWithSyntaxHighlighting": false,
    // VIEWING
    "workbench.editor.showTabs": "multiple",
    "window.zoomLevel": 1.00,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 120,
    "editor.lineNumbers": "interval",
    "editor.renderWhitespace": "trailing",
    "editor.rulers": [
        80,
        120
    ],
    "editor.guides.indentation": true,
    "editor.guides.bracketPairs": "active",
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line-thin",
    // Font
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'FiraCode Nerd Font', 'Fira Code', 'UbuntuMono Nerd Font', 'Ubuntu Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic",
                    "fontFamily": "'Monaspace Radon', 'JetBrainsMono Nerd Font', 'FiraCode Nerd Font', 'Fira Code', 'UbuntuMono Nerd Font', 'Ubuntu Mono', Menlo, Monaco, 'Courier New', monospace",
                }
            }
        ]
    },
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // Git
    "git.autofetch": "all",
    "git.autoStash": true,
    "git.openRepositoryInParentFolders": "never",
    // Copilot
    "github.copilot.advanced": {},
    "github.copilot.enable": {
        "*": true,
        "markdown": true,
        "plaintext": false,
        "scminput": false
    },
    "gitlens.codeLens.scopes": [
        "document"
    ],
    "gitlens.currentLine.scrollable": false,
    "redhat.telemetry.enabled": false,
    // Rust
    "rust-analyzer.inlayHints.bindingModeHints.enable": true,
    "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "skip_trivial",
    "rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": true,
    "rust-analyzer.inlayHints.parameterHints": true,
    "rust-analyzer.lens.enable": false,
    "telemetry.telemetryLevel": "off",
    // Theme
    //"workbench.colorTheme": "React Theme",
    "workbench.editor.autoLockGroups": {
        "mainThreadWebview-markdown.preview": true
    },
    "workbench.fontAliasing": "auto",
    "workbench.iconTheme": "gruvbox-material-icon-theme",
    "material-icon-theme.saturation": 0.75,
    // Recommended Settings
    "editor.emptySelectionClipboard": false,
    "window.newWindowDimensions": "inherit",
    "editor.multiCursorModifier": "alt",
    "diffEditor.renderSideBySide": false,
    "editor.snippetSuggestions": "inline",
    "editor.detectIndentation": false,
    "window.nativeFullScreen": true,
    // Minimalistic Editor (Silence the Noise)
    "breadcrumbs.enabled": false,
    "scm.diffDecorations": "all",
    "editor.hover.enabled": "on",
    "editor.matchBrackets": "near",
    "workbench.tips.enabled": false,
    "editor.colorDecorators": false,
    "git.decorations.enabled": false,
    "workbench.startupEditor": "none",
    "editor.lightbulb.enabled": "off",
    "editor.selectionHighlight": true,
    "editor.overviewRulerBorder": false,
    "editor.renderLineHighlight": "gutter",
    "editor.occurrencesHighlight": "singleFile",
    "problems.decorations.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.location": "top",
    "debug.allowBreakpointsEverywhere": true,
    "window.menuBarVisibility": "toggle",
    "[typst]": {
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
    },
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": true,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.formatOnSave": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "[typst-code]": {
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "tinymist.formatterMode": "typstyle",
    "tinymist.formatterIndentSize": 4,
    "chat.commandCenter.enabled": false,
    "files.associations": {
        "*.json5": "jsonc",
        "*.tf": "hcl"
    },
    "explorer.confirmDragAndDrop": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "editor.formatOnSave": true,
    "RainbowBrackets.depreciation-notice": false,
    "chat.mcp.access": "none",
    "chat.mcp.autostart": "never",
    "chat.mcp.gallery.enabled": true,
    "gitlens.gitkraken.mcp.autoEnabled": false,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
        "Cargo.toml": "Cargo.lock",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    }
}
